<h2>Message:</h2>
<h1><%= @message.title %></h1>
<p class="message-description"><%= @message.description %></p>

<% if user_signed_in? %>
  <% if @message.user_id == current_user.id %>
    <%= link_to 'Edit', edit_message_path(@message), class: "btn" %>
    <%= link_to 'Delete', message_path(@message), method: :delete, data: { confirm: "Are you sure that you want to delete this message?"}, class: "btn btn-warn" %>
  <% end %>
<% end %>
<%= link_to 'Back', root_path, class: "btn" %>